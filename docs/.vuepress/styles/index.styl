.sidebar .sidebar-links li {
  // height: 40px !important;
  line-height: 40px !important;
  font-size: 14px !important;
}

a.sidebar-link.active {
  // border-right: 3px solid #1893ff !important;
  // border-left: 3px solid transparent !important;
  color: blue !important;
  font-weight: 400;
}

a.sidebar-link:hover {
  color: #1893ff !important;
}

// 上下文连接
.page-edit, .page-nav {
  max-width: 1038px;
}

h1 {
  font-size: 24px;
}

h2 {
  font-size: 20px;
}

h3 {
  font-size: 16px;
}

// 代码颜色配置
.token.number, .token.function {
  color: yellow;
}

// 表格的第一列宽度
table th:first-of-type {
  width: 100px;
}

// 下拉三角样式
.arrow.down {
  border-top: 6px solid #1893ff;
}

.arrow.right {
  border-left: 6px solid #1893ff;
}

// 侧边栏文字(有分组的)颜色
.sidebar-heading {
  color: #2c3e50;
}

// 侧边栏的上边距
.sidebar > .sidebar-links > li:not(:first-child) {
  margin-top: 0 !important;
}

// 自定义类页面的单独样式
home-list {
  .theme-default-content:not(.custom) {
    max-width: 1040px !important;
    margin: 0 auto !important;
    // padding: 2rem 2.5rem;
  }
}

// 滚动条样式设置(侧边栏和body)
body::-webkit-scrollbar,.sidebar::-webkit-scrollbar {
  width: 5px;
}

body::-webkit-scrollbar-track,.sidebar::-webkit-scrollbar-track {
  box-shadow: inset 0 0 6px rgba(0, 0, 255, 0.3);
  // border-radius: 10px;
}

body::-webkit-scrollbar-thumb,.sidebar::-webkit-scrollbar-thumb {
  // border-radius: 10px;
  box-shadow: inset 0 0 6px rgba(0, 0, 255, 1);
}